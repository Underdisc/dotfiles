{
  "update.mode": "manual",
  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": true,
  "extensions.ignoreRecommendations": true,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.rulers": [
    80,
    90,
  ],
  "editor.minimap.showSlider": "always",
  "editor.formatOnSave": false,
  "editor.renderWhitespace": "all",
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 90,
  "editor.wrappingIndent": "indent",
  "editor.inlayHints.enabled": "off",
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 5,
  "editor.cursorSurroundingLinesStyle": "all",
  "diffEditor.renderSideBySide": false,
  "workbench.sideBar.location": "right",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "single",
  "workbench.preferredDarkColorTheme": "Default High Contrast",
  "workbench.colorCustomizations": {
    "contrastBorder": "#ffffff",
    "editorCursor.foreground": "#00ff00",
    "editorCursor.background": "#303030",
    "editorRuler.foreground": "#5dff4f",
    "editor.selectionBackground": "#00b0b0",
    "editor.selectionForeground": "#303030",
    "editor.lineHighlightBorder": "#00ffff",
    "diffEditor.removedTextBorder": "#ff5500",
    "editorBracketHighlight.foreground1": "#ffffff",
    "editorBracketHighlight.foreground2": "#66fc52",
    "editorBracketHighlight.foreground3": "#56ffaa",
    "editorBracketHighlight.foreground4": "#51e5ff",
    "editorBracketHighlight.foreground5": "#6596ff",
    "editorIndentGuide.activeBackground1": "#00ffff",
    "editorIndentGuide.activeBackground2": "#00ffff",
    "editorIndentGuide.activeBackground3": "#00ffff",
    "editorIndentGuide.activeBackground4": "#00ffff",
    "editorIndentGuide.activeBackground5": "#00ffff",
    "editorIndentGuide.background1": "#ffffff",
    "editorIndentGuide.background2": "#66fc52",
    "editorIndentGuide.background3": "#56ffaa",
    "editorIndentGuide.background4": "#51e5ff",
    "editorIndentGuide.background5": "#6596ff",
  },
  "explorer.compactFolders": false,
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": false,
  },
  "files.associations": {
    "*.glh": "glsl",
    "*.glf": "glsl",
    "*.glv": "glsl",
    "*.gl*": "glsl",
    "cmath": "cpp",
    "filesystem": "cpp",
    "memory": "cpp",
    "xlocbuf": "cpp",
    "xlocnum": "cpp",
    "algorithm": "cpp",
    "atomic": "cpp",
    "cctype": "cpp",
    "chrono": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "csignal": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cstring": "cpp",
    "ctime": "cpp",
    "cwchar": "cpp",
    "exception": "cpp",
    "fstream": "cpp",
    "functional": "cpp",
    "initializer_list": "cpp",
    "iomanip": "cpp",
    "ios": "cpp",
    "iosfwd": "cpp",
    "iostream": "cpp",
    "istream": "cpp",
    "iterator": "cpp",
    "limits": "cpp",
    "list": "cpp",
    "locale": "cpp",
    "map": "cpp",
    "mutex": "cpp",
    "new": "cpp",
    "ostream": "cpp",
    "ratio": "cpp",
    "regex": "cpp",
    "set": "cpp",
    "sstream": "cpp",
    "stdexcept": "cpp",
    "streambuf": "cpp",
    "string": "cpp",
    "system_error": "cpp",
    "thread": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "typeinfo": "cpp",
    "unordered_map": "cpp",
    "utility": "cpp",
    "vector": "cpp",
    "xfacet": "cpp",
    "xhash": "cpp",
    "xiosbase": "cpp",
    "xlocale": "cpp",
    "xlocinfo": "cpp",
    "xlocmes": "cpp",
    "xlocmon": "cpp",
    "xloctime": "cpp",
    "xmemory": "cpp",
    "xstddef": "cpp",
    "xstring": "cpp",
    "xtr1common": "cpp",
    "xtree": "cpp",
    "xutility": "cpp"
  },
  "git.requireGitUserConfig": false,
  "scm.diffDecorations": "gutter",
  // language specific
  "[javascript]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[typescript]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  // extensions
  "vim.hlsearch": true,
  "vim.searchHighlightColor": "#006000",
  "vim.searchHighlightTextColor": "#FFFFFF",
  "vim.vimrc.enable": true,
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.default.cStandard": "c11",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.intelliSenseMode": "msvc-x64",
  "C_Cpp.loggingLevel": "None",
  "C_Cpp.codeAnalysis.clangTidy.codeAction.formatFixes": false,
  "hexeditor.columnWidth": 24,
  "hexeditor.showDecodedText": true,
  "hexeditor.defaultEndianness": "little",
  "hexeditor.inspectorType": "aside",
  "glassit.alpha": 220,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.defaultGravatarsStyle": "identicon",
  "cmake.showOptionsMovedNotification": false,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
}
