[user]
    email = connortdeakin@gmail.com
    name = Underdisc

[core]
    autocrlf = false
    editor = C:/cygwin64/bin/vim.exe

[alias]
    #SHORTENED COMMANDS
    b = branch
    cm = commit -m
    co = checkout
    d = diff
    ds = diff --submodule=log
    s = status --ignore-submodules=all
    ss = status --ignore-submodules=none
    vommit = commit -m \":O~==~ This is broken\"
    view = "!f() { git diff $1~1 $1 $2 $3; }; f"
    reverseview = "!f() { git diff $1 $1~1 $2 $3; }; f"
    applycommit = "!f() { git view $1 > p; git apply p; rm p; }; f"
    stripcommit = "!f() { git reverseview $1 > p; git apply p; rm p; }; f"

    wc = commit -m "wc"
    awc = !git add . && git commit -m "wc" && :
    rwc = !git reset HEAD~1

    #LOG COMMANDS
    lga = log --graph --abbrev-commit --decorate --date=short --format=format:'%w(75, 0, 1) %C(bold cyan)%h%C(reset) %C(green)- %C(bold yellow)/%ad/%C(reset) %C(green)- %C(bold magenta)%an%C(reset)%n%C(bold green)<%D>%C(reset) %C(white)%s%C(reset)%n' --all
    lgs = !"git lga" -15
    lgl = !"git lga" -30

[credential]
    helper = manager
    username = underdisc
[status]
    submoduleSummary = true
