alias home='cd ~/home'

alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -ls'

alias rmd='rm -rf'

mkcd()
{
    mkdir $1
    cd $1
}

# Copies the current working directory to the clipboard. This only works on
# Windows, but could be expanded to work with other OSs.
cwd()
{
    echo "${PWD}" | clip
}
